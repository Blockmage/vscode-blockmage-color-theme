root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_size              = 2
indent_style             = space
insert_final_newline     = true
tab_width                = 2
trim_trailing_whitespace = true

[{*.sh}]
binary_next_line   = false
function_next_line = false
indent_size        = 2
indent_style       = space
keep_padding       = false
never_split        = true
shell_variant      = bash
space_redirects    = false
switch_case_indent = true

[Makefile]
indent_style = tab
tab_width    = 4
